<div class="col-lg-3">
  <div class="well sidebar-nav">
    <h3>Submission Details</h3>
    Submitted by: <%= link_to @post.user.name, build_profile_path(@post.user) %> <br/>
    Submitted: <%= time_ago_in_words(@post.created_at) %> ago
    <br/>
    <% if current_user and @post.owner?(current_user) and @post.editable? %>
      <br/>
      <%= link_to 'Edit this Post', edit_post_path(@post), class: 'btn btn-primary' %>
      <br/>
      <br/>
      <%= link_to 'Delete this Post', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <% end %>

  </div>
</div>
